{
    "livePreview.autoRefreshPreview": "On Changes to Saved Files",
    "livePreview.defaultPreviewPath": "/output/index.html",
    "livePreview.serverRoot": "/output/",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 100,
    "runOnSave.commands": [
        {
            "globMatch": "**/*.md",
            "command": "node build.mjs",
            "async": false
        },
        {
            "globMatch": "**/*.html",
            "command": "node build.mjs --force",
            "async": false
        },
        {
            "globMatch": "**/*.css",
            "command": "node build.mjs --force",
            "async": false
        },
        {
            "globMatch": "**/*.json",
            "command": "node build.mjs --force",
            "async": false
        }
    ],
    "cSpell.words": [
        "Abelian",
        "booleanfunctions",
        "clopen",
        "coloneqq",
        "DKZHANG",
        "dzhang",
        "functionalanalysis",
        "katex",
        "linalg",
        "linkify",
        "mathbb",
        "mathbf",
        "mathrm",
        "nanolett",
        "normalin",
        "numbertheory",
        "operatorname",
        "powerset",
        "pseudometric",
        "pseudometrics",
        "STIX",
        "texmath",
        "Zhang"
    ]
}
